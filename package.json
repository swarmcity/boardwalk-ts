{
	"name": "@swarmcity/boardwalk-ts",
	"version": "0.0.0",
	"scripts": {
		"prepare": "husky install",
		"dev": "npm run protos && vite",
		"build": "npm run protos && tsc && vite build",
		"preview": "vite preview",
		"lint": "eslint . --ext .ts,.tsx",
		"prettier:check": "prettier -c .",
		"protos": "protons ./src/protos/*.proto"
	},
	"dependencies": {
		"@ethersproject/address": "^5.6.1",
		"@ethersproject/bytes": "^5.6.1",
		"@ethersproject/networks": "^5.6.4",
		"@ethersproject/providers": "^5.6.8",
		"@ethersproject/units": "^5.6.1",
		"@ethersproject/wallet": "^5.6.2",
		"@multiformats/multiaddr": "^10.3.3",
		"@swarm-city/ui-library": "^0.2.0",
		"classnames": "^2.3.1",
		"ethers": "^5.6.9",
		"eventemitter3": "^4.0.7",
		"js-waku": "^0.25.0-rc.1",
		"protons-runtime": "^3.1.0",
		"qrcode.react": "^3.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-easy-crop": "^4.4.2",
		"react-router": "^6.3.0",
		"react-router-dom": "^6.3.0",
		"teaful": "^0.10.0",
		"wagmi": "^0.6.0"
	},
	"devDependencies": {
		"@types/reach__router": "^1.3.10",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.32.0",
		"@typescript-eslint/parser": "^5.32.0",
		"@vitejs/plugin-react": "^2.0.0",
		"autoprefixer": "^10.4.8",
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-react": "^1.1.7",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-unicorn": "^43.0.2",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"protons": "^5.1.0",
		"puppeteer": "^16.0.0",
		"typescript": "^4.7.4",
		"vite": "^3.0.4",
		"vite-plugin-react-svg": "^0.2.0"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md,html}": "prettier --write"
	},
	"eslintConfig": {
		"extends": [
			"react",
			"prettier",
			"plugin:prettier/recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:react/jsx-runtime"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"unicorn"
		],
		"rules": {
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"argsIgnorePattern": "^_"
				}
			],
			"no-duplicate-imports": "off",
			"@typescript-eslint/no-duplicate-imports": [
				"error"
			],
			"new-cap": "off",
			"unicorn/filename-case": [
				"error",
				{
					"case": "kebabCase"
				}
			]
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		}
	},
	"eslintIgnore": [
		"build/*"
	]
}
