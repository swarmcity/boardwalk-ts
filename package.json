{
	"name": "@swarmcity/boardwalk-ts",
	"version": "0.0.0",
	"scripts": {
		"prepare": "husky install",
		"dev": "npm run protos && vite",
		"build": "npm run protos && tsc && vite build",
		"preview": "vite preview",
		"lint": "eslint . --ext .ts,.tsx --ignore-pattern 'src/protos/*' && prettier -c .",
		"lint:fix": "eslint . --ext .ts,.tsx --ignore-pattern 'src/protos/*' --fix && prettier -w .",
		"protos": "protons ./src/protos/*.proto"
	},
	"dependencies": {
		"@ethersproject/address": "^5.7.0",
		"@ethersproject/bytes": "^5.7.0",
		"@ethersproject/networks": "^5.7.1",
		"@ethersproject/providers": "^5.7.2",
		"@ethersproject/units": "^5.7.0",
		"@ethersproject/wallet": "^5.7.0",
		"@multiformats/multiaddr": "^10.3.3",
		"@swarm-city/ui-library": "^0.8.0",
		"@wagmi/chains": "^0.2.22",
		"bigint-conversion": "^2.2.2",
		"classnames": "^2.3.1",
		"ethers": "^5.7.2",
		"eventemitter3": "^4.0.7",
		"js-waku": "^0.30.0",
		"noble-secp256k1": "^1.2.14",
		"protons-runtime": "^3.1.0",
		"qrcode.react": "^3.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-easy-crop": "^4.4.2",
		"react-router": "^6.3.0",
		"react-router-dom": "^6.3.0",
		"react-use": "^17.4.0",
		"teaful": "^0.10.0",
		"uint8arrays": "^4.0.2",
		"wagmi": "^0.12.1"
	},
	"devDependencies": {
		"@types/reach__router": "^1.3.10",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.32.0",
		"@typescript-eslint/parser": "^5.32.0",
		"@vitejs/plugin-react": "^2.0.0",
		"autoprefixer": "^10.4.12",
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-react": "^1.1.7",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-unicorn": "^43.0.2",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"protons": "^5.1.0",
		"puppeteer": "^16.0.0",
		"typescript": "^4.9.4",
		"vite": "^3.0.4"
	},
	"browserslist": [
		"defaults"
	],
	"engines": {
		"node": ">=16.0.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md,html}": "prettier --write"
	},
	"eslintConfig": {
		"extends": [
			"react",
			"prettier",
			"plugin:prettier/recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:react/jsx-runtime"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"unicorn",
			"import"
		],
		"rules": {
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"argsIgnorePattern": "^_"
				}
			],
			"no-duplicate-imports": "off",
			"@typescript-eslint/no-duplicate-imports": [
				"error"
			],
			"new-cap": "off",
			"unicorn/filename-case": [
				"error",
				{
					"case": "kebabCase"
				}
			],
			"prefer-reflect": "off",
			"max-params": "off"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"overrides": [
			{
				"files": [
					"src/protos/*.ts"
				],
				"rules": {
					"no-use-before-define": "off"
				}
			}
		]
	},
	"eslintIgnore": [
		"build/*"
	]
}
